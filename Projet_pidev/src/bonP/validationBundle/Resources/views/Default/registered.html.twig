{% endblock %}

{% block banner %}
    <!--banner-->
    <div class="banner1">
        <div class="container">
            <h3><a href="{{ path('bon_pvalidation_homepage') }}">S'inscrire</a>  <span></span></h3>
        </div>
    </div>
