{% extends 'default/AdminLayout.html.twig' %}


{% block content %}
<h1>Welcome to the enseigne:Affiche page</h1>


<div class="container">

    <center>
        <h1>La liste des enseigne </h1>

        <form name="form" action="{{ path('Recherche_Enseigne') }}" method="post">
            <input  type="text" id="ens" name="ens" placeholder="donner le nom d'enseigne"><br>

            <input type="submit" value="Rechercher" href="" id="">
        </form>

        <table id="t" class="table table-responsive table-striped"  style="margin-bottom: 150px">
            <thead class="thead-dark">

                <th>nom de l'enseigne</th>
                <th>nbre de place </th>
                <th>nom de client</th>
                <th>Date reservation</th>
                <th>image de l'enseigne</th></tr>
            {% for reservation in reservations  %}
            </thead>
             <tbody>
                <tr>
                    <td>{{  reservation.enseigne.nom}}</td>
                    <td>{{  reservation.nbplaces }}</td>
                    <td>{{ reservation.enseigne.user.username }}</td>
                    <td>{{ reservation.datereservation|date}}</td>
                    <td><img src="{{ asset(reservation.enseigne.image) }}"></td>


                </tr>
            {% endfor %}
             </tbody>
        </table>

    </center>
    <div id='openweathermap-widget'></div>
    <script type='text/javascript'>
