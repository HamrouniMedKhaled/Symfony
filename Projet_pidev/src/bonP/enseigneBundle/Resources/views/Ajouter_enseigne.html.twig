{% extends 'default/layout.html.twig' %}

{% block banner %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #map {
            height: 400px;
            width: 100%;
        }
    </style>

{% endblock %}

{% block content %}
    {{ form_start(form) }}

    <div class="form-group" >{{ form_row(form.nom, {'attr': {'class': 'form-control'} }) }}</div>
    <div class="form-group" >{{ form_row(form.description, {'attr': {'class': 'form-control'} }) }}</div>
    <div class="form-group" >{{ form_row(form.capacite, {'attr': {'class': 'form-control'} }) }}</div>
    <div class="form-group" >{{ form_row(form.adresse) }}</div>
    <div class="form-group" >{{ form_row(form.image, {'attr': {'class': 'file'} }) }}</div>
    <div class="form-group" >{{ form_row(form.categorie, {'attr': {'class': 'form-control'} }) }}</div>




    {{ form_end(form) }}
{% endblock %}