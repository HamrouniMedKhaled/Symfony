{% extends 'default/layout.html.twig' %}

{% block banner %}
{% endblock %}

{% block content %}


    <div class="content">
        <div class="products-agileinfo">
            <h2 class="tittle"> {% if deals is empty %}Vous n'avez aucun deal <br> {% else %} Mes deals {% endif %}</h2>
            <div class="container">
                <div class="product-agileinfo-grids w3l">
                    <div class="col-md-3 product-agileinfo-grid">

                        <div class="brand-w3l" style="margin-top:0px;">
                            <h3>Cat√©gories</h3>
                            <ul>
                                <li> <a href="{{ path('Afficher_Deals') }}">Tout les deals</a></li>
                                {% if is_granted("ROLE_OWNER") %}

                                    <li><a href="{{ path('Afficher_Mes_Deal') }}">Afficher mes deals</a></li>


                                {% endif %}
                                {% for categorie in categories  %}
                                    <li><a href="{{ path('Recherche_Categorie_Deal',{"categorie": categorie.nom}) }}">{{ categorie.nom }}</a></li>
                                {% endfor %}
                                <li><a href="{{ path('Recherche_Score_Deal') }}">Afficher par score</a></li>




                                <li><a href="{{ path('Afficher_Reserver') }}">Afficher mes reservations</a></li>
                                 <li>Recherche par ville</li>

                                <form name="form" action="{{ path('Recherche_Ville_Deal') }}" method="post">
                                        <input type="text" id="ville" name="ville"><br>
                                        <input type="submit" value="Rechercher" href="" id="">
                                </form>






                            </ul>
                        </div>
                </div>

                    </div>
                    <div class="col-md-9 product-agileinfon-grid1 w3l">

                        <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                            <ul id="myTab" class="nav1 nav1-tabs left-tab" role="tablist">

                                <div id="myTabContent" class="tab-content">
                                    <!--affichage 1 -->

                                    <div class="product-tab">
                                        {% for deal in deals %}
                                            <div class="col-md-4 product-tab-grid simpleCart_shelfItem">
                                                <div class="grid-arr">
                                                    <div class="grid-arrival">
                                                        <figure>
                                                            <a href="{{ path('Afficher_Deal',{'id':deal.id}) }}"
                                                               class="new-gri" data-toggle="modal"
                                                               data-target="#myModal1">
                                                                <div class="grid-img">
                                                                    <img href="{{ path('Afficher_Deal',{'id':deal.id}) }}" src="{{ asset(deal.image.webpath) }}"
                                                                         class="img-responsive" alt="">
                                                                </div>
                                                            </a>
                                                        </figure>
                                                    </div>
                                                    <div class="women">
                                                        <h6>
                                                            <a href="{{ path('Afficher_Deal',{'id':deal.id}) }}">{{ deal.nom }}</a>
                                                        </h6>
                                                        <span class="size">Score : {{ deal.score }}</span>
                                                        <p>
                                                            <em class="item_price">Prix : </em>
                                                            <del> {{ deal.prix }}  </del>
                                                            <em class="item_price">TND {{ deal.prix-(deal.prix*(deal.tred/100)) }} </em>
                                                        </p>
                                                        <a href="{{ path('Afficher_Deal',{'id':deal.id}) }}"
                                                           data-text="Add To Cart" class="my-cart-b item_add">Afficher</a>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                        <div class="clearfix"></div>
                                    </div>

                                    <!-- affichage 2 -->

                                </div>
                            </ul>
                        </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
    </div>
    <!--content-->




{% endblock %}