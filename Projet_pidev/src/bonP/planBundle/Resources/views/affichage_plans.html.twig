{% extends 'default/layout.html.twig' %}

{% block banner %}
{% endblock %}

{% block content %}


<div class="content">
    <div class="products-agileinfo">
        <h2 class="tittle">Plans</h2>
        <div class="container">
            <div class="product-agileinfo-grids w3l">
                <div class="col-md-3 product-agileinfo-grid">

                    <div class="brand-w3l" style="margin-top:0px;">
                        <h3>Catégories</h3>
                        <ul>
                            <li> <a href="{{ path('plans_affichage') }}">Tout les plans</a></li>
                        {% for categorie in categories  %}
                            <li><a href="{{ path('AfficherPlanparcategorie',{"cat": categorie.nom}) }}">{{ categorie.nom }}</a></li>
                        {% endfor %}
                        </ul>
                        <form name="form" action="{{ path('plan_recherche_titre') }}" method="post">
                            <input type="text" id="titre" name="titre"><br>
                            <input type="submit" value="Rechercher" href="" id="">
                        </form>
                    </div>

                </div>
                <div class="col-md-9 product-agileinfon-grid1 w3l">

                    <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                        <ul id="myTab" class="nav1 nav1-tabs left-tab" role="tablist">

                            <div id="myTabContent" class="tab-content">
                                <!--affichage 1 -->


                                <!-- affichage 2 -->
                                <div role="tabpanel" class="tab-pane fade in active" id="home" aria-labelledby="home-tab">

                                    {% for plan in plans %}
                                    <div class="product-tab1">
                                        <div class="col-md-4 product-tab1-grid">
                                            <div class="grid-arr">
                                                <div  class="grid-arrival">
                                                    <figure>
                                                        <a href="{{path('plan_affichage',{"id":plan.id}) }}" class="new-gri" data-toggle="modal" data-target="#myModal1">
                                                            <div class="grid-img">
                                                                <img  src="{{asset(plan.image.webPath)}}" class="img-responsive" alt="">
                                                            </div>

                                                        </a>
                                                    </figure>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-8 product-tab1-grid1 simpleCart_shelfItem">
                                            <div class="block">

                                            </div>
                                            <div class="women">
                                                <h6><a href="#">{{plan.titre}}</a></h6>
                                                <h4>ajouté par {{ plan.user }}</h4>
                                                <p>{{plan.description}}</p>

                                                <p ><em class="item_price">visité {{plan.score}} fois</em></p>
                                                <a href="{{path('plan_affichage',{"id":plan.id}) }}" data-text="Visiter" class="my-cart-b item_add">Afficher plan</a>
                                            </div>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>

                                    {% endfor %}


                                </div>
                            </div>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
</div>
<!--content-->




{% endblock %}

