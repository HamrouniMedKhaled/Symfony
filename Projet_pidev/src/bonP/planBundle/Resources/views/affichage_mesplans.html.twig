{% extends 'default/layout.html.twig' %}

{% block banner %}
{% endblock %}

{% block content %}


    <div class="content">
        <div class="products-agileinfo">
            <h2 class="tittle"> {% if plans is empty %}Vous n'avez aucun plan <br> <a href="{{ path('plan_ajout') }}">Ajouter un plan</a> {% else %} Mes plans {% endif %}</h2>
            <div class="container">
                <div class="product-agileinfo-grids w3l">
                    <div class="col-md-9 product-agileinfon-grid1 w3l">

                        <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                            <ul id="myTab" class="nav1 nav1-tabs left-tab" role="tablist">

                                <div id="myTabContent" class="tab-content">
                                    <!--affichage 1 -->


                                    <!-- affichage 2 -->
                                    <div role="tabpanel" class="tab-pane fade in active" id="home" aria-labelledby="home-tab">

                                        {% for plan in plans %}
                                            <div class="product-tab1">
                                                <div class="col-md-4 product-tab1-grid">
                                                    <div class="grid-arr">
                                                        <div  class="grid-arrival">
                                                            <figure>
                                                                <a href="{{path('plan_affichage',{"id":plan.id}) }}" class="new-gri" data-toggle="modal" data-target="#myModal1">
                                                                    <div class="grid-img">
                                                                        <img  src="{{asset(plan.image.webPath)}}" class="img-responsive" alt="">
                                                                    </div>

                                                                </a>
                                                            </figure>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-8 product-tab1-grid1 simpleCart_shelfItem">
                                                    <div class="block">

                                                    </div>
                                                    <div class="women">
                                                        <h6><a href="{{path('plan_affichage',{"id":plan.id}) }}">{{plan.titre}}</a></h6>
                                                        <p>{{plan.description}}</p>

                                                        <p ><em class="item_price">visité {{plan.score}} fois</em></p>
                                                        <p ><em class="item_price">signalé {{plan.reportnumber}} fois</em></p>
                                                        <p><em class="item_price">nombre de commentaires</em> {{ plan.commentaires.count }}</p>
                                                        <br><br><br><br><br>
                                                        <a href="{{path('plan_affichage',{"id":plan.id}) }}" data-text="Visiter" class="my-cart-b item_add">Consulter</a>
                                                        <a href="{{ path('plan_update',{'id':plan.id}) }}" data-text="Modifier" class="my-cart-b item_add">Modifier</a>
                                                        <a href="{{ path('plan_delete',{'id':plan.id}) }}" data-text="Supprimer" class="my-cart-b item_add">Supprimer</a>

                                                    </div>
                                                </div>
                                                <div class="clearfix"></div>
                                            </div>
                                            <br>

                                        {% endfor %}


                                    </div>
                                </div>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
    </div>
    <!--content-->




{% endblock %}













